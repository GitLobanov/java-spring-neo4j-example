CREATE DATABASE scientific-research IF NOT EXISTS;

CREATE CONSTRAINT scientist_id IF NOT EXISTS FOR (s:Scientist) REQUIRE s.id IS UNIQUE;
CREATE CONSTRAINT publication_id IF NOT EXISTS FOR (p:Publication) REQUIRE p.id IS UNIQUE;
CREATE CONSTRAINT grant_id IF NOT EXISTS FOR (g:Grant) REQUIRE g.id IS UNIQUE;
CREATE CONSTRAINT research_area_id IF NOT EXISTS FOR (r:ResearchArea) REQUIRE r.id IS UNIQUE;
CREATE CONSTRAINT conference_id IF NOT EXISTS FOR (c:Conference) REQUIRE c.id IS UNIQUE;